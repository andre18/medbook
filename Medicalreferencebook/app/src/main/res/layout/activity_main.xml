<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_main_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/emblem4"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_image_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/activity_main_button_medications"
            android:text="Лекарства"
            android:layout_width="match_parent"
            android:layout_height="65dp" />

        <Button
            android:id="@+id/activity_main_button_diseases"
            android:text="Заболевания"
            android:layout_width="match_parent"
            android:layout_height="65dp" />

        <Button
            android:id="@+id/activity_main_button_medherbs"
            android:text="Лек. растения"
            android:layout_width="match_parent"
            android:layout_height="65dp" />

    </LinearLayout>

</RelativeLayout>